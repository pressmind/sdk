#!/usr/bin/env php
<?php
/**
 * Pressmind SDK Import
 *
 * Primary data pipeline: syncs media objects and touristic data from the PIM.
 * Run from project root (config via PM_CONFIG or pm-config.php).
 * For WordPress/Redis integration use the Travelshop wrapper (legacy).
 *
 * Usage:
 *   php bin/import fullimport
 *   php bin/import mediaobject 12345,12346
 *   php bin/import -c=pm-config.php fullimport
 *   php bin/import --help
 */

// Find autoloader - supports installation as vendor package and standalone
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',           // Standalone SDK
    __DIR__ . '/../../../autoload.php',            // Installed as vendor package
];

$autoloaderFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require_once $autoloadPath;
        $autoloaderFound = true;
        break;
    }
}

if (!$autoloaderFound) {
    fwrite(STDERR, "Autoloader not found. Please run 'composer install'.\n");
    exit(1);
}

$command = new \Pressmind\CLI\ImportCommand();
exit($command->run($argv));
