#!/usr/bin/env php
<?php
/**
 * Pressmind SDK Reset
 *
 * Drops all database tables and flushes MongoDB. Requires confirmation.
 * Requires bootstrap to be loaded (e.g. call from travelshop cli/reset.php).
 *
 * Usage:
 *   php bin/reset
 *   php bin/reset --non-interactive --confirm
 *
 * Options:
 *   --non-interactive  No interactive prompts
 *   --confirm          Required with --non-interactive to actually run reset
 */

// Find autoloader - supports installation as vendor package and standalone
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',           // Standalone SDK
    __DIR__ . '/../../../autoload.php',            // Installed as vendor package
];

$autoloaderFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require_once $autoloadPath;
        $autoloaderFound = true;
        break;
    }
}

if (!$autoloaderFound) {
    fwrite(STDERR, "Autoloader not found. Please run 'composer install'.\n");
    exit(1);
}

$command = new \Pressmind\CLI\ResetCommand();
exit($command->run($argv));
