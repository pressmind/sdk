{
    "name": "pressmind/sdk",
    "description": "Core functionality for the pressmind Web-Core SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Graute",
            "email": "m.graute@team-braeutigam.de"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-bcmath": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-readline": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ext-zlib": "*",
        "ext-fileinfo": "*",
        "ext-redis": "*",
        "ext-imagick": "*",
        "gettext/gettext": "*",
        "jc21/clitable": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "Pressmind\\": "src/Pressmind/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pressmind\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/integrity-check"
    ],
    "scripts": {
        "integrity-check": "php bin/integrity-check",
        "post-update-cmd": [
            "@php bin/integrity-check --non-interactive"
        ]
    },
    "suggest": {
        "opensearch-project/opensearch-php": "OpenSearch PHP-Client ^2.4.3",
        "symfony/http-client": "Symfony HTTP-Client ^7.3",
        "nyholm/psr7": "PSR-7 HTTP Message Implementation ^1.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
